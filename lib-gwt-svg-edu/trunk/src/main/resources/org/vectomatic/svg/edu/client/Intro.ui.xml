			    <circle r="5" cx="0" cy="0" class="dot1"/>
			    <circle r="3" cx="0" cy="0" class="dot2"/>
			    <text class="dot3" x="0" y="16">1</text>
			    </g>
			    <g transform="translate(231,271)">
			    <circle r="5" cx="0" cy="0" class="dot1"/>
			    <circle r="3" cx="0" cy="0" class="dot2"/>
