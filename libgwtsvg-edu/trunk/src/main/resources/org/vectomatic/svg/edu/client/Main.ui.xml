<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui'
	xmlns:i='urn:import:com.google.gwt.widgetideas.client'>
	<ui:with field='resources' type='org.vectomatic.svg.edu.client.EduImages' />
	<g:VerticalPanel spacing="10" width="100%">
	    <g:cell horizontalAlignment='ALIGN_CENTER'>
			<g:HTML ui:field="svgContainer"></g:HTML>
		</g:cell>
	    <g:cell horizontalAlignment='ALIGN_CENTER' width="100%" height="100%">
			<g:HorizontalPanel>
				<g:PushButton ui:field='prevButton' image="{resources.leftArrow}" />
				<g:PushButton ui:field='nextButton' image="{resources.rightArrow}" />
			</g:HorizontalPanel>
		</g:cell>
	    <g:cell horizontalAlignment='ALIGN_CENTER'>
			<g:DecoratorPanel ui:field="designPanel">
				<g:VerticalPanel width="100%">
					<g:HorizontalPanel spacing="10">
						<g:Button ui:field='addButton' text="add" />
						<g:Button ui:field='removeButton' text="remove" />
						<g:Button ui:field='saveButton' text="save" />
						<g:Button ui:field='testButton' text="test" />
						<g:CheckBox ui:field='showLineCheck' text="show line"/>
						<g:VerticalPanel>
							<g:Label text="Picture alpha"/>
							<i:HSliderBar ui:field='pictureAlphaSlider' width="200px"/>
						</g:VerticalPanel>
						<g:Label ui:field='fileLabel'/>
					</g:HorizontalPanel>
					<g:HorizontalPanel>
						<g:ListBox ui:field='dotList' visibleItemCount="9" width="200px"/>
						<g:TextArea ui:field='textArea' visibleLines="8" characterWidth="80"/>
					</g:HorizontalPanel>
				</g:VerticalPanel>
			</g:DecoratorPanel>
		</g:cell>
	</g:VerticalPanel>
</ui:UiBinder>
